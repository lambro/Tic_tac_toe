<p id="notice"><%= notice %></p>

<p>
  <b>Player1:</b>
  <%= current_user.name %>
</p>

<p>
  <b>Player2:</b>
  <%= @game.player2.name %>
</p>

<p>
  <b>Winner:</b>
  <%= @game.winner %>
</p>

<p>
  <b>Loser:</b>
  <%= @game.loser %>
</p>

<div class="game_wrap" id="game_wrap">

<%= @board.each do |display| %>

  <%if display == "X" %>
    <span class="fa-stack fa-lg fa">
      <i class="fa fa-square-o fa-stack-2x"></i>
      <i class="fa fa-close fa-stack-1x"></i>
    </span>

  <% elsif display == "O" %>

    <span class="fa-stack fa-lg fa">
      <i class="fa fa-square-o fa-stack-2x"></i>
      <i class="fa fa-circle-o fa-stack-1x"></i>
    </span>

  <% elsif display == nil %>

  <%= link_to(new_game_move_path(@game, square_id: 0)) do %>
    <i class="fa fa-square-o square fa-5x" id="sq1"></i>
    <%end%>
    
  <% end %>

<% end %>

</div>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
