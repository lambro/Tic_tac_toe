<br><p>
  <h2>Player1:</h2>
  <h3><%= current_user.name %></h3><br>
  <%= image_tag current_user.profile_picture_url(:thumb), class: "mini" %>
</p><br>

<p>
  <h2>Player2:</h2>
  <h3><%= @game.player2.name %></h3><br>
  <%= image_tag @game.player2.profile_picture_url(:thumb), class: "mini" %>
</p><br>

<p>
  <h2>Winner:</h2>
  <h3><%= winning_user %></h3>
</p><br>

<p>
  <h2>Loser:</h2>
  <h3><%= losing_user %></h3>
</p><br>

<div class="game_wrap" id="game_wrap">
  <% @board.each_with_index do |square_id, display| %>
    <%if square_id == "X" %>
        <span class="fa-stack fa-2x fa-lg">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-close fa-stack-1x"></i>
        </span>
    <% elsif square_id == "O" %>
        <span class="fa-stack fa-2x fa-lg">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-circle-o fa-stack-1x"></i>
        </span>
    <% elsif square_id == nil %>
        <%= link_to(new_game_move_path(@game, square_id: display)) do %>
        <span class="fa-stack fa-2x fa-lg">
         <i class="fa fa-square-o fa-stack-2x"></i>
         <i class="fa fa-asterisk fa-stack-1x"></i>
        </span>
      <%end%>
    <% end %>
  <% end %>
</div><br>


<%= link_to 'Edit', edit_game_path(@game) %> |
